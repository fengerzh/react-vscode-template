{
  "extends": ["airbnb", "plugin:cypress/recommended"],
  "plugins": ["cypress"],
  "env": {
    "browser": true
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["babel-polyfill", "babel-polyfill/dist/polyfill.min.js"],
          ["@", "./src/"]
        ],
        "extensions": [".js", ".jsx", ".tsx"]
      }
    }
  },
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/jsx-filename-extension": [2, { "extensions": [".jsx", ".tsx"] }]
  },
  "parser": "babel-eslint"
}
